{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Percentage of Drug Cases by Race (2016-2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/yrlie/3179/refs/heads/main/W10Homework/data/number_addicts_by_state.csv"
  },
  "params": [
    {
      "name": "Year_Selection",
      "value": "2020",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
        ],
        "labels": [
          "All years",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
        ],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Race != 'Total'"},
    {"filter": "datum.Year == Year_Selection"},
    { 
      "fold": ["2016","2017","2018","2019","2020"], 
      "as": ["Year","Value"]
    },
    {
      "joinaggregate": [{"op": "sum", "field": "Value", "as": "YearTotal"}],
      "groupby": ["Year"]
    },
    {
      "calculate": "datum.Value / datum.YearTotal * 100", 
      "as": "Percentage"
    }
  ],
  "encoding": {
    "x": {
      "field": "Race",
      "type": "nominal",
      "title": "Race",
      "axis": {"labelAngle": -25}
    },
    "y": {
      "field": "Percentage",
      "type": "quantitative",
      "title": "Percentage of Drug Cases (%)",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [0, 100]}
    }
  },
  "layer": [
    {
      "mark": "bar"
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
         "x": {"field": "Race"},
          "y": {"field": "Percentage"},
          "text": {"field": "Percentage", "format": ".1f"}
      }
    }
  ]
}