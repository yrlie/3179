{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 635,
  "height": 340,
  "data": {
    "url": "https://raw.githubusercontent.com/yrlie/3179/main/DV2/data/number_addicts_by_education.csv"
  },
  "params": [
    {
      "name": "Year_Selection",
      "value": "2020",
      "bind": {
        "element": "#yearSlider",
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Education != 'Total'" },
    {
      "fold": ["2016","2017","2018","2019","2020"],
      "as": ["Year","Value"]
    },
    {
      "calculate": "toNumber(datum.Value)",
      "as": "ValueNum"
    },
    {
      "joinaggregate": [
        { "op": "sum", "field": "ValueNum", "as": "YearTotal" }
      ],
      "groupby": ["Year"]
    },
    {
      "calculate": "datum.ValueNum / datum.YearTotal * 100",
      "as": "Percentage"
    },
    {
      "filter": "datum.Year == Year_Selection"
    },
    { 
      "calculate": "round(datum.Percentage * 100) / 100", "as": "pct_round" 
    }
  ],
  "encoding": {
    "y": {
      "field": "Percentage",
      "type": "quantitative",
      "axis": {"labelAngle": 0}
    },
    "x": {
      "field": "Education",
      "type": "ordinal",
      "axis": {"tickCount": 4}, 
      "scale": {"type": "linear", "domain": [0, 40]}
    },
    "tooltip": [
            {
              "field":"Education",
              "type":"nominal",
              "title":"Education Level"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    
            },
            {
              "field":"ValueNum",
              "type":"quantitative",
              "title":"Number of Abusers",
              "format":","},
            {
              "field":"pct_round",
              "type":"quantitative",
              "title":"Percentage of Total Abusers (%)",
              "format":".2f"}
          ]
  },
  "layer": [
    {
        "mark": { "type": "rule", "strokeWidth": 2 },
        "encoding": {
          "x": { "field": "Percentage", "type": "quantitative", "axis": {"title":"Percentage of Total Abusers by Education Level (%)"} },
          "x2": { "value": 0 },
          "y": { "field": "Education", "type": "ordinal", "sort": "-x", "axis": {"title": "Education Level"} }
        }
      },
      {
        "mark": { "type": "point", "filled": true, "size": 120 },
        "encoding": {
          "x": { "field": "Percentage", "type": "quantitative" },
          "y": { "field": "Education", "type": "ordinal", "sort": "-x" },
          "color": { "value": "blue" }
        }
      },
      {
        "mark": { "type": "text", "dy": -13, "dx": 4.5, "fontSize": 11 },
        "encoding": {
          "x": { "field": "Percentage", "type": "quantitative" },
          "y": { "field": "Education", "type": "ordinal", "sort": "-x" },
          "text": { "field": "pct_round", "type": "quantitative", "format": ".2f"},
          "opacity": {"value": 0.9}
        
        }
      }
    ]
}