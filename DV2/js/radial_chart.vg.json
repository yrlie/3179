{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/yrlie/3179/main/DV2/data/number_addicts_by_race.csv"
  },
  "params": [
    {
      "name": "Year_Selection",
      "value": "2020",
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2020,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Race != 'Total'" },
    {
      "fold": ["2016","2017","2018","2019","2020"],
      "as": ["Year","Value"]
    },
    {
      "calculate": "toNumber(datum.Value)",
      "as": "ValueNum"
    },
    {
      "joinaggregate": [
        { "op": "sum", "field": "ValueNum", "as": "YearTotal" }
      ],
      "groupby": ["Year"]
    },
    {
      "calculate": "datum.ValueNum / datum.YearTotal * 100",
      "as": "Percentage"
    },
    {
      "filter": "Year_Selection == 'All' || datum.Year == Year_Selection"
    }
  ],
  "encoding": {
    "theta": {
      "field": "Percentage",
      "type": "quantitative",
      "stack": true
    },
    "radius": {
      "field": "Percentage",
      "type": "quantitative",
      "scale": {"type": "linear", "zero": true, "domain": [0, 100]}
    },
    "theta2": {
      "value": 270
    },
    "color": {
      "field": "Race",
      "type": "nominal"
    },
    "tooltip": [
      {"field": "Race", "type": "nominal"},
      {"field": "Percentage", "type": "quantitative", "format": ".2f"},
      {"field": "Year", "type": "nominal"}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50,
        "stroke": "white",
        "strokeWidth": 2
      }
    },
    {
      "mark": {
        "type": "text",
        "radius": 60,
        "theta": {"field": "Race"},
        "align": "left",
        "baseline": "middle",
        "dx": 10
      },
      "encoding": {
        "text": {"field": "Race", "type": "nominal"},
        "color": {"field": "Race", "type": "nominal"}
      }
    }
  ]
}
