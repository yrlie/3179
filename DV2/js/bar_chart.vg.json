{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Percentage of Drug Cases by Race (2016-2020)",
  "data": {
    "url": "https://raw.githubusercontent.com/yrlie/3179/main/DV2/data/number_addicts_by_race.csv"
  },
  "params": [
    {
      "name": "Year_Selection",
      "value": "2020",
      "bind": {
        "input": "select",
        "options": [
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
        ],
        "labels": [
          "2016",
          "2017",
          "2018",
          "2019",
          "2020"
        ],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Race != 'Total'" },
    {
      "fold": ["2016","2017","2018","2019","2020"],
      "as": ["Year","Value"]
    },
    {
      "calculate": "toNumber(datum.Value)",
      "as": "ValueNum"
    },
    {
      "joinaggregate": [
        { "op": "sum", "field": "ValueNum", "as": "YearTotal" }
      ],
      "groupby": ["Year"]
    },
    {
      "calculate": "datum.ValueNum / datum.YearTotal * 100",
      "as": "Percentage"
    },
    {
      "filter": "Year_Selection == 'All' || datum.Year == Year_Selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Race",
      "type": "nominal",
      "title": "Race",
      "axis": {"labelAngle": -25}
    },
    "y": {
      "field": "Percentage",
      "type": "quantitative",
      "title": "Percentage of Total Drug Cases (%)",
      "axis": {"tickCount": 6}, 
      "scale": {"domain": [0, 100]}
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color": {"field": "Year", "type": "nominal"},
        "tooltip": [
          {"field": "Race", "type": "nominal"},
          {"field": "Percentage", "type": "quantitative", "format": ".2f"},
          {"field": "Year", "type": "nominal"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dy": -12,
        "fontSize": 14,
        "fontWeight": "bold"
      },
      "encoding": {
          "text": {"field": "Percentage", "format": ".1f"},
          "tooltip": [
            {"field": "Race", "type": "nominal"},
            {"field": "Percentage", "type": "quantitative", "format": ".2f"},
            {"field": "Year", "type": "nominal"}
          ]
      }
    }
  ]
}